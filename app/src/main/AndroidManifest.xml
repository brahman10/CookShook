<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cookshook">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logocookshook"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logocookshook"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookShook">
        <activity android:name=".FavouriteRecipe"
            android:theme="@style/NoActionBar"></activity>
        <activity android:name=".FavouriteCuisine"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".RecipeActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".DishlistActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".AddRecipeActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForgotActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".RegisterDetailsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>